@using EntityLayer.Concrete
@model List<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


<div class="row">
    <div class="col">
        <div class="card bg-default shadow">
            <div class="card-header bg-transparent border-0">
                <h3 class="text-white mb-0">Hizmetler</h3>
            </div>
            <div class="table-responsive">
                <table class="table align-items-center table-dark table-flush">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col" class="sort" data-sort="name">#</th>
                            <th scope="col" class="sort" data-sort="budget">Başlık</th>
                            <th scope="col">Sil</th>
                            <th scope="col">Düzenle</th>
                        </tr>
                    </thead>
                    <tbody class="list">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th scope="row">
                                    <div class="media align-items-center">
                                      
                                        <div class="media-body">
                                            <span class="name mb-0 text-sm">@item.ServiceID</span>
                                        </div>
                                        
                                    </div>
                                </th>

<td>
                                <div class="media-body">
                                    <span class="name mb-0 text-sm">@item.Title</span>
                                </div></td>
                                <td>
                                    <a href="/Service/DeleteService/@item.ServiceID" class="btn btn-outline-danger" onclick="return confirm('Silmek istediğinize emin misiniz?');">Sil</a>
                                </td>

                                <td>

                                    <a href="/Service/EditService/@item.ServiceID" class="btn btn-outline-warning  ">Güncelle</a>


                                </td>
                            </tr>
                        }


                    </tbody>
                </table>



            </div>
        </div><a href="/Service/addService" class="btn btn-primary">Yeni Hizmet Ekle</a>
    </div>
</div>
