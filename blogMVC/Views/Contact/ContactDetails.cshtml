@using EntityLayer.Concrete
@model Message

@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<h1>Mesaj Detayları</h1>
<br />
<form class="form-group">
    @Html.HiddenFor(x=>x.MessageID,new {@class="form-control"})
    <br />
    @Html.Label("Mesajı Oluşturan")
    @Html.TextBoxFor(x=>x.Name,new {@class="form-control"})
    <br />
    @Html.Label("Mail")
    @Html.TextBoxFor(x=>x.Mail,new {@class="form-control"})
    <br />
    @Html.Label("Mesaj İçeriği")
    @Html.TextAreaFor(x=>x.Content,10,3,new {@class="form-control"})

    <br />

    <a asp-action="Index" class="btn btn-primary"> Geri Dön</a>

</form>